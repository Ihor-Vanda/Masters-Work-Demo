{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "MongoDBSettings": {
    "ConnectionString": "mongodb://admin:password@localhost:27017",
    "DatabaseName": "CoursesDB"
  },

  "CircuitBreakerSettings": {
    "OperationMode": "HttpOnly",
    "RetryDelayMilliseconds": 1000,
    "RetryAttempts": 2,
    "RabbitMq": {
      "HostName": "rabbitmq",
      "Port": 5672,
      "UserName": "user",
      "Password": "password"
    },
    "FailureThreshold": 2,
    "ResetTimeoutSeconds": 30
  }
}
